<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detailed Information"
        android:background="@color/cmdblue"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/detailed_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/detailed_taxonomy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/detailed_npi"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="NPI # "/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Information"
        android:background="@color/cmdblue"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:gravity="center"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>
            <TextView
                android:id="@+id/detailed_address_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: "/>

            <TextView
                android:id="@+id/detailed_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </TableRow>
        <TableRow>
                <TextView
                    android:id="@+id/detailed_city_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City: "/>
                <TextView
                    android:id="@+id/detailed_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/detailed_state_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State: "/>
            <TextView
                android:id="@+id/detailed_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/detailed_country_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country: "/>
            <TextView
                android:id="@+id/detailed_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/detailed_zipcode_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zip: "/>
            <TextView
                android:id="@+id/detailed_zipcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/detailed_phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone # "/>
            <TextView
                android:id="@+id/detailed_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/detailed_fax_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fax # "/>
            <TextView
                android:id="@+id/detailed_fax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/delete_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            android:background="#FF0000"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:gravity="center"/>
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@color/white"
            android:background="@color/cmdgreen"
            android:textSize="16dp"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>